@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var videoModel = (ContentModels.VideoSection)Model.Content;
    var videoSettingsModel = (ContentModels.ItemSettings)Model.Settings;
}

@if (videoSettingsModel.IsVisible)
{
    <div class="video section" style="background-image: url(@videoModel.BackgroundImage.Url());">
        <div class="container" >
            <div class="row">
                <div class="col-lg-4 offset-lg-4">
                    <div class="section-heading text-center" >
                        <h6>| @videoModel.Title</h6>
                        <h2>@videoModel.Header</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    <div class="video-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="video-frame">
                        <img src="@videoModel.Thumbnail.Url()" style="object-fit: cover;height:400px;width:100%;">
                        <a href="@videoModel.VideoUrl" target="_blank"><i class="fa fa-play"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fun-facts">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="wrapper">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="counter">
                                    <h2 class="timer count-title count-number" data-to="@videoModel.PrimeLocations" data-speed="1000"></h2>
                                    <p class="count-text ">@Umbraco.GetDictionaryValue("PrimeLocations")</p>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="counter">
                                    <h2 class="timer count-title count-number" data-to="@videoModel.YearsOfExperience" data-speed="1000"></h2>
                                    <p class="count-text ">@Umbraco.GetDictionaryValue("YearsOfExperience")</p>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="counter">
                                    <h2 class="timer count-title count-number" data-to="@videoModel.AwardsWon" data-speed="1000"></h2>
                                    <p class="count-text ">@Umbraco.GetDictionaryValue("Awards Won")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
